{% extends 'base.html.twig' %}

{# Template gérant l'ajout et la modification d'un concert #}

{% block title %}
    {{ tab_type }}
    un concert
{% endblock %}

{# Partie "dynamique" de la navbar, permettant d'afficher l'onglet actif #}
{% block navbar %}
    <li class="nav-item">
        <a class="nav-link" href="{{path('concerts')}}">Recherche<span class="sr-only">(current)</span>
        </a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="{{path('concert_admin_show')}}">Admin</a>
    </li>
{% endblock %}

{% block body %}
    <div class="col-4 mx-auto my-4">
        <h1>
            {{ tab_type }}
            un concert
        </h1>

        {# Formulaire gérant l'ajout d'un concert #}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{form_widget(form)}}
        <button class="btn btn-success" type="submit">Valider
            <i class="fas fa-check-circle"></i>
        </button>
        {{form_end(form)}}
        <a class="btn btn-secondary mt-2" href="{{path('concert_admin_show')}}" role="button">
            <i class="fas fa-arrow-circle-left"></i>
            Retour</a>
    </div>
{% endblock %}
